<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_1"
    android:padding="@dimen/grid_1"
    tools:context="com.aiyu.cybersecurity.ui.fragments.welcome_screen.fragments.FragmentWelcomeScreen1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/div">

        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="@dimen/image_view_size_screen_1"
            android:layout_height="@dimen/image_view_size_screen_1"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_app_logo" />

        <TextView
            android:id="@+id/text_view_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_logo"
            android:layout_centerHorizontal="true"
            android:text="@string/welcome_to"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_view_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_welcome"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textAppearance="?attr/textAppearanceHeadline3"
            android:textColor="@color/text_color_highlight"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_next"
        app:dividerColor="@color/div_color" />


    <ImageButton
        android:id="@+id/button_next"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_forward"
        android:textColor="@color/black" />

</RelativeLayout>